# =============================================================================
# Production Environment - Variables (Example)
# =============================================================================
#
# 이 파일을 terraform.tfvars로 복사하고 실제 값으로 수정하세요.
# terraform.tfvars는 .gitignore에 포함되어 있습니다.
#
# cp terraform.tfvars.example terraform.tfvars
# =============================================================================

# 프로젝트 기본 설정
project_name = "yeirin"
aws_region   = "ap-northeast-2"

# 네트워크 설정
vpc_cidr           = "10.1.0.0/16"
availability_zones = ["ap-northeast-2a", "ap-northeast-2c"]

# EC2 설정
instance_type = "t3.medium" # 프로덕션: 2 vCPU, 4GB RAM

# SSH 키 (AWS 콘솔에서 미리 생성 필요)
key_name = "yeirin-prod-key"

# SSH 접근 허용 IP (운영팀 IP만)
allowed_ssh_cidrs = [
  # "OFFICE_IP/32",
]

# Elastic IP (프로덕션은 고정 IP 사용)
create_elastic_ip = true

# EBS 볼륨 크기
root_volume_size = 50

# 상세 모니터링 (1분 단위)
enable_detailed_monitoring = true

# RDS 사용 여부 (초기: false)
enable_rds = false

# CloudWatch 알람용 SNS Topic ARN
alarm_sns_topic_arn = ""

# 백엔드 도메인 (SSL 인증서용)
backend_domain = "api.yeirin.com"
