# =============================================================================
# Development Environment - Variables (Example)
# =============================================================================
#
# 이 파일을 terraform.tfvars로 복사하고 실제 값으로 수정하세요.
# terraform.tfvars는 .gitignore에 포함되어 있습니다.
#
# cp terraform.tfvars.example terraform.tfvars
# =============================================================================

# 프로젝트 기본 설정
project_name = "yeirin"
aws_region   = "ap-northeast-2"

# 네트워크 설정
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-northeast-2a"]

# EC2 설정
instance_type = "t3.small" # 개발환경: 2 vCPU, 2GB RAM

# SSH 키 (AWS 콘솔에서 미리 생성 필요)
key_name = "yeirin-dev-key"

# SSH 접근 허용 IP (개발자 IP만)
# 본인 IP 확인: curl ifconfig.me
allowed_ssh_cidrs = [
  # "YOUR_IP/32",  # 예: "123.456.789.0/32"
]

# Elastic IP (개발환경은 비활성화 권장)
create_elastic_ip = false

# EBS 볼륨 크기
root_volume_size = 30
